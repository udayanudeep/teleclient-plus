<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base Material 3 Theme -->
    <style name="Base.Theme.TelegramPlus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        
        <!-- Outline -->
        <item name="colorOutline">@color/md_theme_light_outline</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Material 3 shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TelegramPlus.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TelegramPlus.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TelegramPlus.LargeComponent</item>
    </style>
    
    <style name="Theme.TelegramPlus" parent="Base.Theme.TelegramPlus" />
    
    <!-- Fullscreen Theme for Media Viewer -->
    <style name="Theme.TelegramPlus.Fullscreen" parent="Theme.TelegramPlus">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.TelegramPlus.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.TelegramPlus.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.TelegramPlus.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.TelegramPlus.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Widget.TelegramPlus.Button.Filled" parent="Widget.Material3.Button">
        <item name="cornerRadius">24dp</item>
    </style>
    
    <style name="Widget.TelegramPlus.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">24dp</item>
    </style>
    
    <!-- Text Input Styles -->
    <style name="Widget.TelegramPlus.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.TelegramPlus.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    
    <!-- FAB Styles -->
    <style name="Widget.TelegramPlus.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.TelegramPlus.FloatingActionButton</item>
    </style>
    
    <style name="ShapeAppearance.TelegramPlus.FloatingActionButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Bottom Navigation -->
    <style name="Widget.TelegramPlus.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemRippleColor">@color/md_theme_light_primaryContainer</item>
    </style>
    
    <!-- Toolbar -->
    <style name="Widget.TelegramPlus.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/md_theme_light_onSurface</item>
    </style>
    
    <!-- Message Bubble Styles -->
    <style name="MessageBubble.Sent">
        <item name="android:background">@drawable/message_bubble_sent</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="MessageBubble.Received">
        <item name="android:background">@drawable/message_bubble_received</item>
        <item name="android:padding">12dp</item>
    </style>
    
</resources>
